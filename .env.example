# Database Configuration
DATABASE_URL=postgresql://edahouse_user:your_secure_password_here@localhost:5432/edahouse

# PostgreSQL Configuration (for compatibility)
PGHOST=localhost
PGPORT=5432
PGDATABASE=edahouse
PGUSER=edahouse_user
PGPASSWORD=your_secure_password_here

# Session Configuration (ВАЖНО: Замените на случайную строку минимум 32 символа)
SESSION_SECRET=your_very_long_random_session_secret_here_minimum_32_characters

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Store Configuration (can also be set via admin panel)
STORE_NAME=My Store
STORE_DESCRIPTION=Best food delivery service

# Optional: Features
ENABLE_REGISTRATION=true
ENABLE_GUEST_ORDERS=true

# Optional: File Upload Limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Optional: Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com